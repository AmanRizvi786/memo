<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fav">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cardMain"
        android:layout_margin="10dp"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/baseline_dehaze_24"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Search"
                    android:textSize="20sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_mic_24"
                    android:layout_marginLeft="220dp"
                    />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Releases"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="20sp"
        android:layout_below="@+id/cardMain"/>
    <TextView
        android:id="@+id/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MORE"
        android:textSize="18sp"
        android:padding="20sp"
        android:layout_marginLeft="120dp"
        android:layout_toRightOf="@+id/h1"
        android:layout_below="@+id/cardMain"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="198dp"
        android:layout_height="230dp"
        android:layout_below="@+id/h1"
        app:cardUseCompatPadding="true"
        >

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:src="@drawable/p6" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mauris sagi.."
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <androidx.appcompat.widget.Toolbar

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="140dp"
            app:menu="@menu/menu"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="198dp"
        android:layout_height="230dp"
        android:layout_toRightOf="@+id/card1"
        android:layout_below="@+id/h1"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:src="@drawable/p5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mauris sagi.."
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <androidx.appcompat.widget.Toolbar

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="140dp"
            app:menu="@menu/menu"

            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="25sp"
        android:layout_below="@+id/card1"/>
    <TextView
        android:id="@+id/h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MORE"
        android:textSize="18sp"
        android:padding="25sp"
        android:layout_marginLeft="120dp"
        android:layout_toRightOf="@+id/h1"
        android:layout_below="@+id/card2"/>

    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="220dp"
        android:id="@+id/card3"
        android:layout_below="@+id/h3"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/c11"
            />

        <TextView
            android:id="@+id/tc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:text="Curabit..."

            android:textStyle="bold"/>
        />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="220dp"
        android:id="@+id/card4"
        android:layout_below="@+id/h3"
        android:layout_toRightOf="@+id/card3"
        app:cardUseCompatPadding="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/c11"/>

        <TextView
            android:id="@+id/tc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:text="Curabit..."
            android:textStyle="bold"/>
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="220dp"
        android:id="@+id/card5"
        android:layout_below="@+id/h3"
        android:layout_toRightOf="@+id/card4"
        app:cardUseCompatPadding="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/c11"/>

        <TextView
            android:id="@+id/tc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:text="Curabit..."
            android:textStyle="bold"/>
        />
    </androidx.cardview.widget.CardView>
</RelativeLayout>